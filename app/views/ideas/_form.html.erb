<%= form_for @ideas, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :project_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :project_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :project_description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :project_description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :business_plan, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :business_plan, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  ideas_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
