<%- model_class = Ideas -%>
<div class="page-header">
  <h1><%=t '.title', :default => Ideas %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:project_name) %></dt>
      <dd><pre class="prettyprint"><%= @ideas.project_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:project_description) %></dt>
      <dd><pre class="prettyprint"><%= @ideas.project_description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:business_plan) %></dt>
      <dd><pre class="prettyprint"><%= @ideas.business_plan %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ideas_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ideas_path(@ideas), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ideas_path(@ideas),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

